<h1 class="text-2xl font-bold mb-4">Questions for <%= @quiz.title %></h1>
<%= link_to 'New Question', new_quiz_question_path(@quiz), class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
<table class="min-w-full bg-white border border-gray-300">
  <thead>
    <tr>
      <th class="border-b p-2">Content</th>
      <th class="border-b p-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td class="border-b p-2"><%= question.content %></td>
        <td class="border-b p-2">
          <%= link_to 'Show', quiz_question_path(@quiz, question), class: 'text-blue-500' %> |
          <%= link_to 'Edit', edit_quiz_question_path(@quiz, question), class: 'text-blue-500' %> |
          <%= link_to 'Destroy', quiz_question_path(@quiz, question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

