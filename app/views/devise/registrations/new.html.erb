<h2 style="font-size: 2em; margin-bottom: 1em;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :email, style: 'display: block; font-weight: bold;' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :password, style: 'display: block; font-weight: bold;' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :password_confirmation, style: 'display: block; font-weight: bold;' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", style: 'background-color: #4CAF50; color: white; padding: 0.5em 1em; border: none; border-radius: 4px; text-decoration: none; cursor: pointer;' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
