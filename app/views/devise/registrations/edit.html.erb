<h2 style="font-size: 2em; margin-bottom: 1em;">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :email, style: 'display: block; font-weight: bold;' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div style="margin-bottom: 1em; color: #555;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :password, style: 'display: block; font-weight: bold;' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
    <% if @minimum_password_length %>
      <br />
      <em style="font-size: 0.9em; color: #999;"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :password_confirmation, style: 'display: block; font-weight: bold;' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :current_password, style: 'display: block; font-weight: bold;' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", style: 'background-color: #4CAF50; color: white; padding: 0.5em 1em; border: none; border-radius: 4px; text-decoration: none; cursor: pointer;' %>
  </div>
<% end %>

<h3 style="font-size: 1.5em; margin-top: 2em; color: #d9534f;">Cancel my account</h3>

<div style="margin-bottom: 1em;">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, style: 'background-color: #d9534f; color: white; padding: 0.5em 1em; border: none; border-radius: 4px; text-decoration: none; cursor: pointer;' %></div>

<%= link_to "Back", :back, style: 'background-color: #6c757d; color: white; padding: 0.5em 1em; border: none; border-radius: 4px; text-decoration: none; cursor: pointer;' %>
