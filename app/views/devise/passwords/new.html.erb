<h2 style="font-size: 2em; margin-bottom: 1em;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 1em;">
    <%= f.label :email, style: 'display: block; font-weight: bold; margin-bottom: 0.5em;' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%; padding: 0.5em; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", style: 'background-color: #007bff; color: white; padding: 0.5em 1em; border: none; border-radius: 4px; text-decoration: none; cursor: pointer;' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
